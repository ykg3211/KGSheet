{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "esnext",
    "jsx": "react"
  },
  "include": [
    "./packages/**/*"
  ]
}