{
  "files": [
    "lib/index.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "es2019"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "@/*": [
        "lib/*"
      ]
    }
  },
  "include": [
    "lib"
  ]
}